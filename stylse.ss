body {
    font-family: Arial, sans-serif;
    display: flex;
    justify-content: center;
    align-items: center;
    height: 100vh;
    margin: 0;
    background-color: #f5f5f5;
}

.bogo-container {
    background-color: white;
    border: 1px solid #ddd;
    border-radius: 8px;
    padding: 20px;
    width: 350px;
    box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
}

h2 {
    font-size: 20px;
    margin: 0 0 15px;
    text-align: center;
    color: #ff69b4;
}

.bogo-options {
    display: flex;
    flex-direction: column;
    gap: 10px;
}

.bogo-option {
    display: flex;
    align-items: center;
    padding: 10px;
    border: 1px solid #ddd;
    border-radius: 5px;
    cursor: pointer;
}

.bogo-option input[type="radio"] {
    margin-right: 10px;
}

.bogo-option span {
    flex: 1;
}

.bogo-option .price {
    font-weight: bold;
}

.bogo-option .discount {
    color: #ff69b4;
    font-size: 12px;
    margin-right: 10px;
}

.bogo-option .popular {
    background-color: #ffeb3b;
    color: #333;
    font-size: 10px;
    padding: 2px 5px;
    border-radius: 3px;
    margin-left: 10px;
}

.bogo-option.selected {
    border-color: #ff69b4;
    background-color: #fff0f5;
}

.selectors {
    padding: 10px;
    border: 1px solid #ddd;
    border-radius: 5px;
    margin: 10px 0;
}

.selector-group {
    display: flex;
    align-items: center;
    gap: 10px;
    margin-bottom: 10px;
}

.selector-group span {
    font-weight: bold;
}

select {
    padding: 5px;
    border: 1px solid #ddd;
    border-radius: 5px;
    width: 100px;
}

.shipping {
    font-size: 14px;
    color: #555;
    text-align: center;
    margin: 10px 0;
}

.total {
    font-size: 16px;
    font-weight: bold;
    text-align: center;
    margin: 10px 0;
}

.add-to-cart {
    background-color: #ff69b4;
    color: white;
    border: none;
    padding: 10px;
    width: 100%;
    border-radius: 5px;
    cursor: pointer;
    font-size: 16px;
}

.add-to-cart:hover {
    background-color: #ff1493;
}

.powered-by {
    font-size: 12px;
    color: #777;
    text-align: center;
    margin-top: 10px;
}
